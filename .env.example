# ============================================================================
# BMS Environment Configuration
# Copy this file to .env and fill in the values for your environment
# ============================================================================

# ============================================================================
# Database Configuration (Required for production)
# ============================================================================
# For local development, use:
# DATABASE_URL=postgresql://localhost:5432/bms_db
#
# For CockroachDB Cloud (Render.com):
# DATABASE_URL=postgresql://[username]:[password]@[host]:[port]/defaultdb?sslmode=verify-full
#
# Get your connection string from:
# - CockroachDB Cloud: https://console.cockroachlabs.cloud
# - PostgreSQL: your database provider
DATABASE_URL=postgresql://localhost:5432/bms_db

# ============================================================================
# Server Configuration
# ============================================================================
# Port for the server (Render.com will set this automatically)
PORT=5000

# Environment: development, staging, or production
NODE_ENV=development

# ============================================================================
# Security Configuration (Required)
# ============================================================================
# JWT Secret for signing tokens (use a strong, random string of 32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-32-characters-minimum

# Access token expiration time
JWT_EXPIRY=24h

# ============================================================================
# API Configuration
# ============================================================================
# Frontend URL for CORS (Update for production)
REACT_APP_API_URL=http://localhost:5000

# Enable development routes (disable in production)
ALLOW_DEV_ROUTES=true

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable request logging
REQUEST_LOGGING=true

# ============================================================================
# Security Settings
# ============================================================================
# Enable CORS
CORS_ENABLED=true

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# ============================================================================
# Rate Limiting
# ============================================================================
# Enable rate limiting
RATE_LIMITING=true

# Rate limit window (in minutes)
RATE_LIMIT_WINDOW=15

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Email Configuration (For future use)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@barangay-system.com

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# ============================================================================
# Production-Specific Settings
# ============================================================================
# SSL/TLS Configuration
USE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Session configuration
SESSION_TIMEOUT=3600000
SESSION_SECURE_COOKIE=false
